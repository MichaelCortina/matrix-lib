    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'matrix-lib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=matrix-lib"
                ],
                "filter": {
                    "name": "matrix-lib",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration-tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration-tests",
                    "--package=matrix-lib"
                ],
                "filter": {
                    "name": "integration-tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}